@model FurnitureShop.Models.Product

@{
    ViewData["Title"] = "Edit";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Product</h3><small>Edit</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data" class="container p-4 bg-light rounded shadow" style="max-width: 600px;">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Hidden Field for ID -->
                            <input type="hidden" asp-for="Id" />

                            <!-- Category Field -->
                            <div class="mb-3 row">
                                <label asp-for="Category_id" class="col-sm-2 col-form-label">Category:</label>
                                <div class="col-sm-10">
                                    <select asp-for="Category_id" class="form-control" asp-items="ViewBag.Category_id"></select>
                                    <span asp-validation-for="Category_id" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Name Field -->
                            <div class="mb-3 row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" placeholder="Enter product name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Price Field -->
                            <div class="mb-3 row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Price:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Price" class="form-control" placeholder="Enter product price">
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Stock Field -->
                            <div class="mb-3 row">
                                <label asp-for="Stock" class="col-sm-2 col-form-label">Stock:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Stock" class="form-control" placeholder="Enter stock quantity">
                                    <span asp-validation-for="Stock" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Image Field -->
                            <div class="mb-3 row">
                                <label asp-for="Image" class="col-sm-2 col-form-label">Image:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Image" class="form-control" type="file" accept="image/*">
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Description Field -->
                            <div class="mb-3 row">
                                <label asp-for="Description" class="col-sm-2 col-form-label">Description:</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Description" class="form-control" placeholder="Enter product description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-between">
                                <input type="submit" value="Save" class="btn btn-success px-4" />
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Header {
    <link rel="stylesheet" href="/admin/plugins/ckeditor5/ckeditor5.css">
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="importmap">
        {
            "imports": {
                "ckeditor5": "/admin/plugins/ckeditor5/ckeditor5.js",
                "ckeditor5/": "/admin/plugins/ckeditor5/"
            }
        }
    </script>
    <script type="module">
        import {
            ClassicEditor,
            Essentials,
            Paragraph,
            Bold,
            Italic,
            Font
        } from 'ckeditor5';

        ClassicEditor
            .create( document.querySelector( '#Description' ), {
                plugins: [ Essentials, Paragraph, Bold, Italic, Font ],
                toolbar: [
                    'undo', 'redo', '|', 'bold', 'italic', '|',
                    'fontSize', 'fontFamily', 'fontColor', 'fontBackgroundColor'
                ]
            } )
            .then( editor => {
                window.editor = editor;
            } )
            .catch( error => {
                console.error( error );
            } );
    </script>
}
