@model FurnitureShop.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Product</h3><small>delete</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container mt-4">
                            <h1 class="text-danger">Delete Product</h1>
                            <h3 class="text-warning">Are you sure you want to delete this product?</h3>
                            <div class="card shadow-sm mt-3">
                                <div class="card-body">
                                    <h4 class="text-secondary mb-3">Product Details</h4>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Name)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Name)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Description)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.Raw(Model.Description)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Price)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Price)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Stock)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Stock)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Image)
                                        </dt>
                                        <dd class="col-sm-9">
                                            <img src="@Url.Content("~/data/products/" + Model.Image)"
                                                 alt="Product Image"
                                                 class="img-thumbnail"
                                                 style="max-width: 200px;" />
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Category)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Category!.Name)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.CreatedBy)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.UpdatedDate)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.UpdatedDate)
                                        </dd>
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.UpdatedBy)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.UpdatedBy)
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="mt-4">
                                <form asp-action="Delete" class="d-inline">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                                <a asp-action="Index" class="btn btn-secondary ms-2">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>



