@model FurnitureShop.Models.Feature

@{
    ViewData["Title"] = "Edit";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Feature</h3><small>Edit</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="FEA_ID" />

                            <div class="form-group">
                                <div class="mb-3 row">
                                    <label asp-for="Icon" class="col-sm-1 col-form-label"></label>
                                    <div class="col-sm-3">
                                        
                                        <input asp-for="Icon" class="form-control" type="file" accept="image/*" id="Icon">
                                        <span asp-validation-for="Icon" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center align-items-center mx-auto" style="width: 300px; height: 200px; overflow: hidden; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                                <img class="img-fluid" alt="Preview Image" id="imgPreview" style="width: 100%; height: auto; object-fit: cover;">
                            </div>

                            <div class="form-group">
                                <div class="mb-3 row">
                                    <label asp-for="Title" class="col-sm-1 col-form-label"></label>
                                    <div class="col-sm-3">
                                        <input asp-for="Title" class="form-control">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="mb-3 row">
                                    <label asp-for="Subtitle" class="col-sm-1 col-form-label"></label>
                                    <div class="col-sm-3">
                                        <input asp-for="Subtitle" class="form-control">
                                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="mb-3 row">
                                    <label asp-for="DisplayOrder" class="col-sm-1 col-form-label"></label>
                                    <div class="col-sm-3">
                                        <input asp-for="DisplayOrder" class="form-control">
                                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="mb-3 row">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-2">
                                        <input type="submit" value="Save" class="btn btn-success" />
                                        <a id="btnAdd" role="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        window.onload = () => {
            // Hiển thị ảnh preview khi chọn ảnh
            document.getElementById("Icon").onchange = (e) => {
                var preview = document.getElementById('imgPreview');
                var file = e.target.files[0];
                var reader  = new FileReader();

                reader.onloadend = function () {
                  preview.src = reader.result;
                }

                if (file) {
                  reader.readAsDataURL(file);
                } else {
                  preview.src = ''; // Xóa ảnh preview nếu không có ảnh
                }
            };

            // Nếu có ảnh cũ, hiển thị luôn ảnh đó trong preview
            var currentIcon = '@Url.Content("~/data/features/" + Model.Icon)';
            if (currentIcon) {
                document.getElementById('imgPreview').src = currentIcon;
            }
        }
    </script>
}
