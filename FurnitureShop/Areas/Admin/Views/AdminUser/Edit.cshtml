@model FurnitureShop.Models.AdminUser

@{
    ViewData["Title"] = "Edit";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>AdminUser</h3><small>Edit</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" class="container p-4 bg-light rounded shadow" style="max-width: 600px;">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Hidden Input for ID -->
                            <input type="hidden" asp-for="USE_ID" />

                            <!-- Username Field -->
                            <div class="mb-3 row">
                                <label asp-for="Name" class="col-sm-3 col-form-label">Name:</label>
                                <div class="col-sm-9">
                                    <input asp-for="Name" class="form-control" placeholder="Enter username" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-3 row">
                                <label asp-for="Password" class="col-sm-3 col-form-label">Password:</label>
                                <div class="col-sm-9">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Display Name Field -->
                            <div class="mb-3 row">
                                <label asp-for="DisplayName" class="col-sm-3 col-form-label">Display Name:</label>
                                <div class="col-sm-9">
                                    <input asp-for="DisplayName" class="form-control" placeholder="Enter display name" />
                                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Email Field -->
                            <div class="mb-3 row">
                                <label asp-for="Email" class="col-sm-3 col-form-label">Email:</label>
                                <div class="col-sm-9">
                                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Phone Field -->
                            <div class="mb-3 row">
                                <label asp-for="Phone" class="col-sm-3 col-form-label">Phone:</label>
                                <div class="col-sm-9">
                                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-flex justify-content-start gap-3 mt-4">
                                <input type="submit" value="Save" class="btn btn-success px-4" />
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
