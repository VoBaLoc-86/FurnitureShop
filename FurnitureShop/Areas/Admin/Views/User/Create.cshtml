@model FurnitureShop.Models.User

@{
    ViewData["Title"] = "Create";
}

<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>User</h3><small>Create</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" class="container p-4 bg-light rounded shadow" style="max-width: 600px;">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Name Field -->
                            <div class="mb-3 row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">Name:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" placeholder="Enter name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Email Field -->
                            <div class="mb-3 row">
                                <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-3 row">
                                <label asp-for="Password" class="col-sm-2 col-form-label">Password:</label>
                                <div class="col-sm-10">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Submit Button and Back to List Button -->
                            <div class="d-flex justify-content-between">
                                <input type="submit" value="Save" class="btn btn-success px-4" />
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
