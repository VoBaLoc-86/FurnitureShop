@model FurnitureShop.Models.Page

@{
    ViewData["Title"] = "Create";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Page-Content</h3><small>Create</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" class="container p-4 bg-light rounded shadow">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Title -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Title" class="col-sm-2 col-form-label fw-bold">Title</label>
                                <div class="col-sm-6">
                                    <input asp-for="Title" class="form-control" placeholder="Enter title">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Content" class="col-sm-2 col-form-label fw-bold">Content</label>
                                <div class="col-sm-6">
                                    <input asp-for="Content" class="form-control" placeholder="Enter content">
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-end gap-3">
                                <input type="submit" value="Save" class="btn btn-success px-4">
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
