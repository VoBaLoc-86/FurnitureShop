@model FurnitureShop.Models.Banner

@{
    ViewData["Title"] = "Create";
}

<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Banner</h3><small>Create</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" enctype="multipart/form-data" class="container p-4 bg-light rounded shadow">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3 row">
                                <label asp-for="Title" class="col-sm-3 col-form-label fw-bold">Title</label>
                                <div class="col-sm-9">
                                    <input asp-for="Title" class="form-control" placeholder="Enter title">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3 row">
                                <label asp-for="Image" class="col-sm-3 col-form-label fw-bold">Image</label>
                                <div class="col-sm-9">
                                    <input asp-for="Image" class="form-control" type="file" accept="image/*">
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 text-center">
                                <div class="mx-auto"
                                     style="width: 300px; height: 200px; overflow: hidden; border-radius: 10px; background-color: #f9f9f9; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                                    <img class="img-fluid" alt="Preview Image" id="imgPreview" style="width: 100%; height: auto; object-fit: cover;">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label asp-for="DisplayOrder" class="col-sm-3 col-form-label fw-bold">Display Order</label>
                                <div class="col-sm-9">
                                    <input asp-for="DisplayOrder" class="form-control" placeholder="Enter display order">
                                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex justify-content-end gap-3">
                                <input type="submit" value="Save" class="btn btn-success px-4">
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        window.onload = () => {
            document.getElementById("Image").onchange = (e) => {
                var preview = document.getElementById('imgPreview');
                var file = e.target.files[0];
                var reader  = new FileReader();

                reader.onloadend = function () {
                  preview.src = reader.result;
                }

                if (file) {
                  reader.readAsDataURL(file);
                } else {
                  preview.src = '';
                }
            };
        }
    </script>
}


