@{
    ViewData["Title"] = "Admin Page";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-center mb-4">
        <h1 class="text-center mb-4">Admin Dashboard</h1>
    </div>

    <div class="container mt-5">
        <!-- Thông tin tổng quan -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-blue me-3">
                            <i class="bi bi-box"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Products</h5>
                            <h3>250</h3>
                            <p class="card-text text-muted">Products available</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-green me-3">
                            <i class="bi bi-cart"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Orders</h5>
                            <h3>120</h3>
                            <p class="card-text text-muted">Orders this month</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-pink me-3">
                            <i class="bi bi-people"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Customers</h5>
                            <h3>80</h3>
                            <p class="card-text text-muted">New customers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thông tin bổ sung -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-orange me-3">
                            <i class="bi bi-image"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Banners</h5>
                            <h3>15</h3>
                            <p class="card-text text-muted">Active banners</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-brown me-3">
                            <i class="bi bi-tags"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Categories</h5>
                            <h3>25</h3>
                            <p class="card-text text-muted">Available categories</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-gray me-3">
                            <i class="bi bi-gear"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Settings</h5>
                            <h3>5</h3>
                            <p class="card-text text-muted">Configuration options</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-brown me-3">
                            <i class="bi bi-person-badge"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Admin Users</h5>
                            <h3>10</h3>
                            <p class="card-text text-muted">Admins managing site</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-blue me-3">
                            <i class="bi bi-chat-left-text"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Reviews</h5>
                            <h3>500</h3>
                            <p class="card-text text-muted">Reviews received</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <div class="icon-circle bg-orange me-3">
                            <i class="bi bi-stars"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-1">Total Features</h5>
                            <h3>40</h3>
                            <p class="card-text text-muted">Features in use</p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="icon-circle bg-green me-3">
                        <i class="bi bi-files"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Total Pages</h5>
                        <h3>10</h3>
                        <p class="card-text text-muted">Static pages</p>
                    </div>
                </div>
            </div>
        </div>
        </div>
        <!-- Biểu đồ -->
        </div>
</div>

@section Header {
    <style>
        body {
            background-color: #f5f5f5;
        }

        .card {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            font-weight: bold;
        }

        .chart-placeholder {
            height: 200px;
            background: #e9ecef;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 5px;
        }

        .icon-circle {
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            color: #fff;
        }

        .bg-blue {
            background-color: #4e73df;
        }

        .bg-green {
            background-color: #1cc88a;
        }

        .bg-pink {
            background-color: #36b9cc;
        }

        .bg-orange {
            background-color: #f6c23e;
        }

        .bg-brown {
            background-color: #e74a3b;
        }

        .bg-gray {
            background-color: #858796;
        }
    </style>
}
