@model IEnumerable<FurnitureShop.Models.Order>

<h2>Order Management</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.User_id</td>
                <td>@order.User.Name</td>
                <td>@order.Total_price.ToString()</td>
                <td>@order.Status.ToString()</td>
                <td>
                    <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                    <form asp-area="Admin" asp-controller="Order" asp-action="Delete" asp-route-id="@order.Id" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
