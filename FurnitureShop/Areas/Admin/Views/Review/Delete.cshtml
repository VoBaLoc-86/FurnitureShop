@model FurnitureShop.Models.Review

@{
    ViewData["Title"] = "Delete";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Review</h3><small>delete</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="container mt-4">
                            <h1 class="text-danger">Delete Confirmation</h1>

                            <h3 class="text-warning">Are you sure you want to delete this review?</h3>

                            <div class="card shadow-sm mt-3">
                                <div class="card-body">
                                    <h4 class="text-secondary">Review Details</h4>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Rating)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Rating)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Comment)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Comment)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.Product)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.Product.Name)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.User)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.User.Name)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.CreatedDate)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.CreatedDate)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.CreatedBy)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.CreatedBy)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.UpdatedDate)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.UpdatedDate)
                                        </dd>

                                        <dt class="col-sm-3 fw-bold text-secondary">
                                            @Html.DisplayNameFor(model => model.UpdatedBy)
                                        </dt>
                                        <dd class="col-sm-9">
                                            @Html.DisplayFor(model => model.UpdatedBy)
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="mt-4">
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                    <a asp-action="Index" class="btn btn-secondary ms-2">
                                        <i class="bi bi-arrow-left"></i> Back to List
                                    </a>
                                </form>

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





