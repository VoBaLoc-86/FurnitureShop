@model FurnitureShop.Models.Review

@{
    ViewData["Title"] = "Create";
}
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
        </div> <!--end::Row-->
    </div> <!--end::Container-->
</div> <!--end::App Content Header--> <!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-12">
                <!-- Default box -->
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md">
                                <h3>Review</h3><small>Create</small>
                            </div>
                            <div class="col-md-auto">
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" class="container p-4 bg-light rounded shadow">
                            <!-- Validation Summary -->
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <!-- Product Selection -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Product_id" class="col-sm-2 col-form-label fw-bold">Product</label>
                                <div class="col-sm-6">
                                    <select asp-for="Product_id" class="form-control" asp-items="ViewBag.Product_id"></select>
                                    <span asp-validation-for="Product_id" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- User Selection -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="User_id" class="col-sm-2 col-form-label fw-bold">User</label>
                                <div class="col-sm-6">
                                    <select asp-for="User_id" class="form-control" asp-items="ViewBag.User_id"></select>
                                    <span asp-validation-for="User_id" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Rating -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Rating" class="col-sm-2 col-form-label fw-bold">Rating</label>
                                <div class="col-sm-6">
                                    <select asp-for="Rating" class="form-control">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Comment -->
                            <div class="mb-3 row align-items-center">
                                <label asp-for="Comment" class="col-sm-2 col-form-label fw-bold">Comment</label>
                                <div class="col-sm-6">
                                    <input asp-for="Comment" class="form-control" placeholder="Enter comment">
                                    <span asp-validation-for="Comment" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="d-flex justify-content-end gap-3">
                                <input type="submit" value="Save" class="btn btn-success px-4">
                                <a id="btnAdd" role="button" class="btn btn-secondary px-4" asp-action="Index">Back to List</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
