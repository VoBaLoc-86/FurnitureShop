
@{
	ViewData["Title"] = "Shop Page";
	var pageShop = ViewData["PageShop"] as FurnitureShop.Models.Page;
	
}
<!-- Start Hero Section -->
<div class="hero">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-lg-5">
				<div class="intro-excerpt">
					<h1>@pageShop.Title</h1>
					<p class="mb-4">
						@pageShop.Content
					</p>
					
				</div>
			</div>
			<div class="col-lg-7">
				<div class="hero-img-wrap">
					<img src="~/data/pages/@pageShop.Image" class="img-fluid">
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End Hero Section -->



<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <!-- Search and Filter Form -->
        <form method="get" asp-action="Index" class="mb-4">
            <div class="row">
                <!-- Search Bar -->
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control" placeholder="Search by product name" value="@ViewData["SearchQuery"]" />
                </div>
                <!-- Price Range Filter -->
                <div class="col-md-3">
                    <input type="number" name="minPrice" class="form-control" placeholder="Min Price" value="@ViewData["MinPrice"]" />
                </div>
                <div class="col-md-3">
                    <input type="number" name="maxPrice" class="form-control" placeholder="Max Price" value="@ViewData["MaxPrice"]" />
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12 text-end">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>

        <!-- Product List -->
        <div class="row">
            @foreach (var item in ViewData["Products"] as List<Product> ?? [])
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" asp-action="Details" asp-route-id="@item.Id">
                        <img src="~/data/products/@item.Image" class="img-fluid product-thumbnail" style="width:306px;height:306px">
                        <h3 class="product-title">@item.Name</h3>
                        <strong class="product-price">$@item.Price</strong>

                        <span class="icon-cross">
                            <img src="~/images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
