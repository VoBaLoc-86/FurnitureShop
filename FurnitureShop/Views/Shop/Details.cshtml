@model FurnitureShop.Models.Product
@{
    ViewData["Title"] = "Product Detail";
}

<div class="untree_co-section product-detail-section">
    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <div class="product-image">
                    <img src="~/data/products/@Model.Image"
                         alt="Product Image"
                         class="~/img-fluid rounded" style="width:477px;height:477px" />
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6">
                <h2 class="product-title mb-4">@Model.Name</h2>
                <p class="product-price text-muted">$@Model.Price</p>
                <p class="product-description mb-4">
                    @Html.Raw(Model.Description)
                </p>

                <form action="#" class="mb-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number"
                                   id="quantity"
                                   class="form-control"
                                   value="1"
                                   min="1" />
                        </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </form>
                <p>Số lượng tồn: @Model.Stock</p>
                <ul class="list-unstyled">
                    <li><strong>Category:</strong> @Model.Category!.Name</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="untree_co-section reviews-section">
    <div class="container">
        <h3 class="mb-4">Customer Reviews</h3>

        <!-- List Reviews -->
        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            foreach (var review in Model.Reviews)
            {
                <div class="review mb-3 p-3 border rounded">
                    <p><strong>@review.User.Name</strong> - <small>@review.CreatedDate.ToShortDateString()</small></p>
                    <p>@Html.Raw(review.Comment)</p>
                </div>
            }
        }
        else
        {
            <p>No reviews yet. Be the first to leave a review!</p>
        }


        <!-- Add Review -->
        <h4 class="mt-5">Add a Review</h4>
        <form asp-action="AddReview" asp-route-id="@Model.Id" method="post">
            <div class="mb-3">
                <label for="reviewContent" class="form-label">Your Review</label>
                <textarea id="reviewContent" name="Content" class="form-control" rows="4" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </div>
</div>

<div class="untree_co-section related-products-section">
    <div class="container">
        <h3 class="mb-5">Related Products</h3>
        <div class="row">
            <!-- Product Card -->
            @foreach (var item in ViewData["relatedproducts"] as List<Product> ?? [])
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" asp-action="Details" asp-route-id="@item.Id">
                        <img src="~/data/products/@item.Image"
                             class="img-fluid product-thumbnail" style="width:306px;height:306px" />
                        <h3 class="product-title">@item.Name</h3>
                        <strong class="product-price">$@item.Price</strong>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
