
@{
    ViewData["Title"] = "Product Detail";
}
<div class="untree_co-section product-detail-section">
    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <div class="product-image">
                    <img src="~/images/product-1.png"
                         alt="Product Image"
                         class="~/img-fluid rounded" style="width:477px;height:477px"/>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-md-6">
                <h2 class="product-title mb-4">Nordic Chair</h2>
                <p class="product-price text-muted">$50.00</p>
                <p class="product-description mb-4">
                    This beautifully designed Nordic Chair blends style and comfort
                    seamlessly. Perfect for your living space or workspace, the
                    ergonomic design supports extended use with ease.
                </p>

                <form action="#" class="mb-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number"
                                   id="quantity"
                                   class="form-control"
                                   value="1"
                                   min="1" />
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">
                                Add to Cart
                            </button>
                        </div>
                    </div>
                </form>

                <ul class="list-unstyled">
                    <li><strong>Category:</strong> Furniture</li>
                    <li><strong>Material:</strong> High-quality wood and fabric</li>
                    <li><strong>Dimensions:</strong> 85 x 55 x 90 cm</li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Product Detail Section -->
<!-- Start Related Products Section -->
<div class="untree_co-section related-products-section">
    <div class="container">
        <h3 class="mb-5">Related Products</h3>
        <div class="row">
            <!-- Product Card -->
            <div class="col-12 col-md-4 col-lg-3 mb-5">
                <a class="product-item" href="#">
                    <img src="~/images/product-2.png"
                         class="img-fluid product-thumbnail" style="width:306px;height:306px"/>
                    <h3 class="product-title">Kruzo Aero Chair</h3>
                    <strong class="product-price">$78.00</strong>
                </a>
            </div>
            <div class="col-12 col-md-4 col-lg-3 mb-5">
                <a class="product-item" href="#">
                    <img src="~/images/product-3.png"
                         class="img-fluid product-thumbnail" />
                    <h3 class="product-title">Ergonomic Chair</h3>
                    <strong class="product-price">$43.00</strong>
                </a>
            </div>
        </div>
    </div>
</div>